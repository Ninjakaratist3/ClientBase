@model IEnumerable<CountryViewModel>
@{
    ViewData["Title"] = "Список стран";
}

<div class="d-flex justify-content-between align-items-center">
    <h2>Список стран</h2>
    <a href="/country/create" class="btn btn-primary">Создать</a>
</div>
<div class="mt-4">
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th scope="col">Название</th>
                <th scope="col">Редактировать</th>
                <th scope="col">Удалить</th>
            </tr>
        </thead>
        <tr style="display: block !important;max-width: 200px">
            <td scope="col" style="border-top: 0px;"><input type="text" class="form-control country-name-search" style="max-width: 200px;" /></td>
        </tr>
        <tbody class="countries-list">
            @foreach (var country in Model)
            {
                <tr class="country-@country.Id" title="@country.Name">
                    <th class="country-id" style="display: none">@country.Id</th>
                    <td><a href="/country/@country.Id">@country.Name</a></td>
                    <td><a href="/country/edit/@country.Id" class="btn btn-primary p-1">Редактировать</a></td>
                    <td><button class="country-delete btn btn-danger p-1">Удалить</button></td>
                </tr>
            }
        </tbody>
    </table>
</div>