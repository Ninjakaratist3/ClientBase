@model ClientBase.Core.Models.Country

<div class="justify-content-center py-5">
<div style="max-width: 800px;">
    <h3>Добавление страны</h3>
    <form id="country-form" asp-controller="Country" asp-action="Create">
        <div class="form-group">
            <label asp-for="Name" class="col-md-12 col-form-label px-0">Название</label>
            <div class="col-md-12 px-0">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex">
            <button class="button px-4 mr-3" type="submit">Создать</button>
            <a href="/countries" class="pt-2 d-inline-block">Отмена</a>
        </div>
    </form>
</div>

</div>