@model ClientBase.Core.ViewModels.ClientForm

<div class="justify-content-center py-5">
    <div style="max-width: 800px;">
        <h3>Редактирование данных о клиенте</h3>
        <form id="client-form" asp-controller="Client" asp-action="Update">
            <div class="form-group">
                <label asp-for="Name" class="col-md-12 col-form-label px-0">Название</label>
                <div class="col-md-12 px-0">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="INN" class="col-md-12 col-form-label px-0">ИНН</label>
                <div class="col-md-12 px-0">
                    <input asp-for="INN" class="form-control" />
                    <span asp-validation-for="INN" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="KPP" class="col-md-12 col-form-label px-0">КПП</label>
                <div class="col-md-12 px-0">
                    <input asp-for="KPP" class="form-control" />
                    <span asp-validation-for="KPP" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="PropertyTypeId" class="col-md-12 col-form-label px-0">Тип собственности</label>
                <div class="col-md-12 px-0">
                    <select asp-for="PropertyTypeId" class="form-control">
                        @foreach (var propertyType in Model.PropertyTypes)
                        {
                            <option value="@propertyType.Id">@propertyType.Name</option>
                        }
                    </select>
                    <span asp-validation-for="PropertyTypeId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CityId" class="col-md-12 col-form-label px-0">Город</label>
                <div class="col-md-12 px-0">
                    <select asp-for="CityId" class="form-control">
                        @foreach (var city in Model.Cities)
                        {
                            <option value="@city.Id">@city.Name</option>
                        }
                    </select>
                    <span asp-validation-for="CityId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="IndustryId" class="col-md-12 col-form-label px-0">Отрасль</label>
                <div class="col-md-12 px-0">
                    <select asp-for="IndustryId" class="form-control">
                        @foreach (var industry in Model.Industries)
                        {
                            <option value="@industry.Id">@industry.Name</option>
                        }
                    </select>
                    <span asp-validation-for="IndustryId" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex">
                <button class="button button-client-update px-4 mr-3" type="submit">Изменить</button>
                <a href="/clients" class="pt-2 d-inline-block">Отмена</a>
            </div>
        </form>
    </div>

</div>