@model IEnumerable<PropertyTypeViewModel>


<div class="d-flex justify-content-between align-items-center">
    <h2>Список типов собственности</h2>
    <a href="/property-type/create" class="btn btn-primary">Создать</a>
</div>
<div class="mt-4">
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th scope="col">Название</th>
                <th scope="col">Редактировать</th>
                <th scope="col">Удалить</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var propertyType in Model)
            {
                <tr>
                    <th class="property-type-id" style="display: none">@propertyType.Id</th>
                    <td><a href="/property-type/@propertyType.Id">@propertyType.Name</a></td>
                    <td><a href="/property-type/edit/@propertyType.Id" class="btn btn-primary p-1">Редактировать</a></td>
                    <td><button class="property-type-delete btn btn-danger p-1">Удалить</button></td>
                </tr>
            }
        </tbody>
    </table>
</div>